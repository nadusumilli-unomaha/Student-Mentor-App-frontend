{{!-- navbar displaying menu and logout  --}}

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index'}}<a class="navbar-brand" href="#">Student App</a>{{/link-to}}
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
      </ul>
      {{#if auth.isLoggedIn}}
        <ul class="nav navbar-nav pull-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">{{auth.user.username}}
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#" {{action "logout"}}><i class="glyphicon glyphicon-off"></i>&nbsp;&nbsp;Log out</a></li>
            </ul>
          </li>
        </ul>
      {{else}}
        <ul class="nav navbar-nav pull-right">
          {{#link-to 'login' tagName="li"}}<a href>Login</a>{{/link-to}}
        </ul>
      {{/if}}
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>