<div class="container" style="margin-top:40px; margin-bottom:40px">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 well" >
            <form>
                <div class="row">
                    <h4 class="text-center">Account Registration</h4>
                </div>
                {{#if validationErrorMsg}}
                    <div class="alert alert-danger">
                        <p style="text-align: center;">{{validationErrorMsg}}</p>
                    </div>
                {{/if}}
                <!-- username and email row -->
                <div class="row reg-form-row">
                    <div class="col-md-6">
                        <p class="reg-label">Username</p>
                    </div>
                    <div class="col-md-6">
                        <p class="reg-label">Email</p>
                    </div>
                </div>
                 <div class="row reg-form-row">
                    <div class="col-md-6 {{usernameclasses}}">
                        <div class="form-group has-feedback">
                            {{input type="text" value=content.user.username class='form-control' enter="register" placeholder="Username"}}
                            <i class="glyphicon glyphicon-{{usernameIcon}} form-control-feedback "></i>
                        </div>
                    </div>
                    <div class="col-md-6 {{emailclasses}}">
                        <div class="form-group has-feedback">
                            {{input type="text" value=content.user.email class='form-control' enter="register" placeholder="Email"}}
                            <i class="glyphicon glyphicon-{{emailIcon}} form-control-feedback "></i>
                        </div>
                    </div>
                </div>

                <!-- password row -->
                <div class="row reg-form-row">
                    <div class="col-md-6">
                        <p class="reg-label">Password</p>
                    </div>
                    <div class="col-md-6">
                        <p class="reg-label">Confirm Password</p>
                    </div>
                </div>
                 <div class="row reg-form-row">
                    <div class="col-md-6 {{passwordclasses}}">
                        <div class="form-group has-feedback">
                            {{input type="password" value=content.user.password class='form-control' enter="register" placeholder="Password"}}
                            <i class="glyphicon glyphicon-{{passwordIcon}} form-control-feedback "></i>
                        </div>
                   </div>
                    <div class="col-md-6 {{confirmpasswordclasses}}">
                        <div class="form-group has-feedback">
                            {{input type="password" value=confirmpassword class='form-control' enter="register" placeholder="Confirm Password"}}
                            <i class="glyphicon glyphicon-{{confirmpasswordIcon}} form-control-feedback "></i>                                  
                        </div>                              
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-block btn-success" {{action "register"}}>Sign Up</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>